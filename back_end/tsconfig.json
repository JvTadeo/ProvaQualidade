{
  "compilerOptions": {
    "types": ["jest", "node"],
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src", "__tests__/**/*.ts"],
  "exclude": ["node_modules"]
}
